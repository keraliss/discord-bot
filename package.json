{
    "name": "bitshala-discord-bot",
    "version": "1.0.0",
    "description": "Bitshala discord bot",
    "author": "",
    "license": "ISC",
    "scripts": {
        "build": "tsc",
        "dev": "nodemon src/index.ts",
        "prod": "node dist/index.js",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "format": "prettier --write \"**/*.+(js|jsx|json|css|md)\""
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.+(js|jsx)": "eslint --fix",
        "*.+(json|css|md)": "prettier --write"
    },
    "dependencies": {
        "@types/node": "^20.11.5",
        "@types/nodemailer": "^6.4.14",
        "commandkit": "^0.1.6",
        "cors": "^2.8.5",
        "discord.js": "^14.14.1",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "http-status-codes": "^2.3.0",
        "mongoose": "^8.0.2",
        "nodemailer": "^6.9.8",
        "rss-parser": "^3.13.0",
        "uuid-random": "^1.3.2"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "eslint": "^8.55.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.1",
        "husky": "^8.0.3",
        "lint-staged": "^15.1.0",
        "nodemon": "^3.0.2",
        "prettier": "^3.1.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    }
}
